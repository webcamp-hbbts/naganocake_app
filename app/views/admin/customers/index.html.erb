
<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
     <table class="table table-hover">
  　　　<thead>
    　<tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
   　  </tr>
      </thead>
  　　<tbody>
  　　  <% @customers.each do |customer| %>
        <tr>
          <th scope="row"><%= customer.id %></th>
          <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
          <td><%= customer.email %></td>
          <td>
            <td>
              <% if customer.is_deleted %>
                <p class="text-secondary"><%= "退会" %></p>
              <% else %>
                <p class="text-success"><%= "有効" %></p>
              <% end %>
           </td>
          </td>
        </tr>
        <% end %>
      </tbody>
　　　</table>
    </div>
  <div class="col-2"></div>
  </div>
</div>


<%= paginate @customers %>