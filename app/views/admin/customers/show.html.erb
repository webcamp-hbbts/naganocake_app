<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-borderless">
        <h3><%= @customer.last_name %><%= @customer.first_name %>の会員詳細</h3>
       <tbody>
         <tr>
           <td>会員ID</td>
           <td><%= @customer.id %></td>
         </tr>
         <tr>
           <td>氏名</td>
           <td><%= @customer.last_name %></td><td><%= @customer.first_name %></td>
         </tr>
         <tr>
           <td>フリガナ</td>
            <td><%= @customer.last_name_kana %></td><td><%= @customer.first_name_kana %></td>
         </tr>
         <tr>
           <td>郵便番号</td>
           <td><%= @customer.postcode %></td>
         </tr>
         <tr>
           <td>住所</td>
           <td><%= @customer.address %></td>
         </tr>
         <tr>
           <td>電話番号</td>
           <td><%= @customer.phone_number %></td>
         </tr>
         <tr>
           <td>メールアドレス</td>
           <td><%= @customer.email %></td>
         </tr>
         <tr>
           <td>会員ステータス</td>
           <td>
              <% if @customer.is_deleted %>
                <p class="text-secondary"><%= "退会" %></p>
              <% else %>
                <p class="text-success"><%= "有効" %></p>
              <% end %>
           </td>
         </tr>
       </tbody>
     </table>
      <div class="">
        <%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-success" do %>編集する<% end %>
        <%= link_to admin_orders_path, class: "btn btn-primary" do %>注文履歴一覧を見る<% end %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>