<div class="container">
  <div class="row ml-5">
    <h3 class = "my-4 ml-5"><%= @customer.full_name %>さんの会員詳細</h3>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-7">
      <table class="table table-borderless">
       <tbody>
         <tr>
           <td>会員ID</td>
           <td><%= @customer.id %></td>
         </tr>
         <tr>
           <td>氏名</td>
           <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
         </tr>
         <tr>
           <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
         </tr>
         <tr>
           <td>郵便番号</td>
           <td><%= @customer.postcode %></td>
         </tr>
         <tr>
           <td>住所</td>
           <td><%= @customer.address %></td>
         </tr>
         <tr>
           <td>電話番号</td>
           <td><%= @customer.phone_number %></td>
         </tr>
         <tr>
           <td>メールアドレス</td>
           <td><%= @customer.email %></td>
         </tr>
         <tr>
           <td>会員ステータス</td>
           <td>
              <% if @customer.is_deleted %>
                <p class="text-secondary"><%= "退会" %></p>
              <% else %>
                <p class="text-success"><%= "有効" %></p>
              <% end %>
           </td>
         </tr>
         <tr>
           <td></td>
           <td><%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-success" do %>編集する<% end %></td>
           <td><%= link_to admin_orders_path(order_sort: 1,key: @customer.id), class: "btn btn-primary" do %>注文履歴一覧を見る<% end %></td>
         </tr>
       </tbody>
     </table>
    </div>
    <div class="col-4"></div>
  </div>
</div>