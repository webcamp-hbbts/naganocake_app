<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div><table class="table table-borderless">
        <h3>注文履歴詳細</h3>
       <tbody>
         <tr>
           <td>購入者</td>
           <td>
             <%= link_to admin_customer_path(@order.customer_id) do %>
             <%= @order.customer.last_name %><%= @order.customer.first_name %>
             <% end %>
            </td>
         </tr>
         <tr>
           <td>注文日</td>
           <td><%= @order.created_at %></td>
         </tr>
         <tr>
           <td>配送先</td>
            <td><%= @order.address %></td>
         </tr>
          <tr>
           <td>支払い方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
           <td>注文ステータス</td>
           <td>
             <%= form_with model: [:admin, @order] do |f| %>
              <%= f.select :status, Order.statuses.keys, {prompt: "選択してください"} %>
              <%= f.submit '更新',class: "btn btn-success"%>
              <% end %>
            </td>
          </tr>
       </tbody>
     </table></div>
      <div>
        <table class="table table-hover">
  　　  　<thead>
    　   <tr>
          <th scope="col">商品名</th>
          <th scope="col">単価（税込）</th>
          <th scope="col">数量</th>
          <th scope="col">小計</th>
          <th scope="col">制作ステータス</th>
   　    </tr>
        </thead>
  　　    <tbody>
  　　    <% @order_items.each do |order_item| %>
          <tr>
            <th><%= order_item.item.name %></th>
            <td><%= order_item.tax_included_price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal %>円</td>
            <td>
              <%= form_with model: [:admin, order_item] do |f| %>
                <%= f.select :production_status, OrderItem.production_statuses.keys, {prompt: "選択してください"} %>
                <%= f.submit '更新',class: "btn btn-success"%>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
　　　  </table>
      </div>
      <div>

         <table>
         <tr>
           <td>商品合計</td>
            <% @sum = 0 %>

            <% @order.order_items.each do |order_item| %>
               <% @sum += order_item.subtotal %>
             <% end %>

          <td><%= @sum %>円</td>
         </tr>
         <tr>
           <td>送料</td>
           <td><%= @order.shipping_price %>円</td>
         </tr>
         <tr>
           <td>請求金額合計</td>
           <td><%= @order.billing %>円</td>
         </tr>
         </table>

      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>