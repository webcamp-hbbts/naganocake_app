<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
     <table class="table table-hover">
  　　　<thead>
    　<tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
   　  </tr>
      </thead>
  　　<tbody>
  　　  <% @orders.each do |order| %>
        <tr>
          <th><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></th>
          <td><%= order.name %></td>
              <% @sum = 0 %>
            <% order.order_items.each do |order_item| %>
               <% @sum += order_item.amount %>
             <% end %>
          <td><%= @sum %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
　　　</table>
    </div>
  <div class="col-2"></div>
  </div>
</div>
