<div class="container">
  <div class="row ml-5">
    <h3 class = "my-4 ml-5 bg-light">注文履歴</h3>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-9">
     <table class="table table-hover">
  　　　<thead>
    　<tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
   　  </tr>
      </thead>
  　　<tbody>
  　　  <% @orders.each do |order| %>
        <tr>
          <th><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></th>
          <td><%= order.customer.full_name %></td>
              <% @sum = 0 %>
            <% order.order_items.each do |order_item| %>
               <% @sum += order_item.amount %>
             <% end %>
          <td><%= @sum %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
　　　</table>
    </div>
  <div class="col-2"></div>
  </div>
  <div class="row">
    <div class="col-5"></div>
    <div class="paginate col-4"><%= paginate @orders %></div>
    </div>
</div>

