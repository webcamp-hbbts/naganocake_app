<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
     <table class="table table-hover">
  　　　<thead>
    　<tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
   　  </tr>
      </thead>
  　　<tbody>
  　　  <% @orders.each do |order| %>
        <tr>
          <th scope="row"><%= order.created_at %></th>
          <td><%= order.name %></td>
          <td><%= order.order_items.amount %></td>
          <td><%= order.order_items.production_status %></td>
        </tr>
        <% end %>
      </tbody>
　　　</table>
    </div>
  <div class="col-2"></div>
  </div>
</div>
