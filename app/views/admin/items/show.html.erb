<div class = "container">
  <h3 class = "my-4 ml-5">商品詳細</h3>
  <div class = "row">
    <div class = "col-4 ml-5">
      <%= attachment_image_tag @item, :image, size:"250x200" %>
    </div>
    <div class = "col-6">
      <div class = "item-show-field row mb-4">
        <span class = "col-5">商品名</span>
        <span><%= @item.name %></span>
      </div>
      <div class = "item-show-field row mb-4">
        <span class = "col-5">商品説明</span>
        <span><%= @item.description %></span>
      </div>
      <div class = "item-show-field row mb-4">
        <span class = "col-5">ジャンル</span>
        <span><%= @item.genre.name %></span>
      </div>
      <div class = "item-show-field row mb-4">
        <span class = "col-5">税込価格(税抜価格)</span>
        <span><%= ((@item.tax_exclude_price * 1.1).floor).to_s(:delimited) %> (<%= @item.tax_exclude_price.to_s(:delimited) %>)円</span>
      </div>
      <div class = "item-show-field row mb-4">
        <span class = "col-5">販売ステータス</span>
        <% if @item.is_active %>
          <span class = "text-success">販売中</span>
        <% else %>
          <span class = "text-secondary">販売停止中</span>
        <% end %>
      </div>
      <div class = "item-show-field">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>