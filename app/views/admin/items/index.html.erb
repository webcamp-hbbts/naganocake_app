<div class = "container">
    <div class = "mx-auto">
      <h3>商品一覧</h3>
      <%= link_to new_admin_item_path do %>
        <p>新規投稿</p>
      <% end %>
      <table class = "table">
        <thead class = "thead-light">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.tax_exclude_price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-secondary">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>