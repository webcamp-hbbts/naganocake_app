<div class = "container">
  <div class = "row ml-5">
    <h3 class = "my-4 ml-5"><span style="background-color:#eee">ジャンル編集</span></h3>
  </div>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
    <div class = "form-group row mt-4 ml-5">
      <%= f.label :name, "ジャンル名",class: "mr-5" %>
      <%= f.text_field :name, class: "mr-5" %>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>