<div class = "container">
　<h3>ジャンル一覧・追加</h3>
  <div class = "row">
    <div  class = "genre-form">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "新規投稿", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <table class = "table">
      <thead class = "thead-secondary">
        <tr>
          <th>ジャンル</th>
          <th colspan = "1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>