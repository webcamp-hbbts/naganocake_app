<div class = "container">
  <div class = "row ml-4">
　  <h4 class = "col-3 my-4 ml-5 text-center bg-light">ジャンル一覧・追加</h4>
　</div>
  <div class = "row ml-5 my-4">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div  class = "form-group row">
        <%= f.label :name, "ジャンル名", class: "mr-5" %>
        <%= f.text_field :name, placeholder: "ジャンル名",class: "mr-5" %>
        <%= f.submit "新規投稿", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class = "row">
    <div class = "col-4">
      <table class = "table">
        <thead class = "thead-light">
          <tr>
            <th class = "pl-5" style = "width: 65%">ジャンル</th>
            <th colspan = "1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>