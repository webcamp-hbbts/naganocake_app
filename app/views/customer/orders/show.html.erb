<div class="container">
  <div class="row ml-5">
    <h3 class = "my-4 ml-5">注文履歴詳細</h3>
  </div>
  <div class="row">
    <div class="col-6">
      <table>
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-6">
      <table>
        <tr>
          <th>請求情報</th>
          <th></th>
          <th></th>  
        </tr>
        <tr>
          <td>商品合計</td>
            <% @sum = 0 %>
            <% @order.order_items.each do |order_item| %>
            <% @sum += order_item.subtotal %>
            <% end %>
          <td><%= @sum %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @order.billing %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <div>
      <table>
  　　  　<thead>
    　     <tr>
    　       <th>注文内容</th>
    　       <th></th>
    　       <th></th>
    　       <th></th>
    　     </tr>
    　     <tr>          
            <td>商品</td>
            <td>単価（税込）</td>
            <td>個数</td>
            <td>小計</td>
   　      </tr>
        </thead>
  　　    <tbody>
  　　      <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.tax_included_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %>円</td>
            </tr>
          <% end %>
        </tbody>
　 　　</table>
　　　</div>
  </div>
</div>
