<div class="container">
  <div class="row ml-5">
    <h3 class = "my-4 ml-5"><span style="background-color:#eee">注文履歴詳細</span></h3>
  </div>
  <div class="row">
    <div class="col-6">
      <strong>注文情報</strong>
      <table class="table">
        <tbody>
　　　　　<tr>
            <td style="background-color:#eee">注文日</td>
            <td class="border"><%= @order.created_at %></td>
          </tr>
          <tr>
            <td style="background-color:#eee">配送先</td>
            <td class="border"><%= @order.address %></td>
          </tr>
          <tr>
            <td style="background-color:#eee">支払い方法</td>
            <td class="border"><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td style="background-color:#eee">注文ステータス</td>
            <td class="border"><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <strong>請求情報</strong>
      <table class="table">
        <tr>
          <td style="background-color:#eee">商品合計</td>
            <% @sum = 0 %>
            <% @order.order_items.each do |order_item| %>
            <% @sum += order_item.subtotal %>
            <% end %>
          <td class="border"><%= @sum.floor.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td style="background-color:#eee">送料</td>
          <td class="border"><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <td style="background-color:#eee"><strong>ご請求額</strong></td>
          <td class="border"><%= @order.billing.floor.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
    <div class="col-3"></div>
  </div>
  <div class="row">
    <div class="col-7">
      <strong>注文内容</strong>
      <table class="table">
  　　    <thead>
    　     <tr style="background-color:#eee">          
            <td class="border">商品</td>
            <td class="border">単価（税込）</td>
            <td class="border">個数</td>
            <td class="border">小計</td>
   　      </tr>
        </thead>
  　　    <tbody>
  　　      <% @order_items.each do |order_item| %>
            <tr>
              <td class="border"><%= order_item.item.name %></td>
              <td class="border"><%= order_item.tax_included_price.floor.to_s(:delimited) %></td>
              <td class="border"><%= order_item.amount %></td>
              <td class="border"><%= order_item.subtotal.to_s(:delimited) %>円</td>
            </tr>
          <% end %>
        </tbody>
  　   </table>
　  </div>
　  <div class="col-5"></div>
  </div>
</div>
