<h2>注文履歴</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
　　　<td><%= order.postcode %><br/><%= order.address %><br/><%= order.name %><br/></td>
      <td><%= order.items %></td>
      <td><%= order.billing %></td>
      <td><%= order.status %></td>
      <td>
        <%= link_to customer_order_path(order), class: 'btn btn-primary' do  %>
          表示する
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

