<h2>注文履歴</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.address %></td>
      <td><%= order.postcode %><br /><%=order.address %><br /><%=order.name %></td><br />
      <td><%= order.items %></td>
      <td><%= order.billing %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", customer_order_path(order) %></td>
    </tr>
    <% end %>
  </tbody>
</table>