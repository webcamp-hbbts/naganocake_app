<div class="container">
  <div class="row ml-5">
    <%= form_with url: customer_orders_confirm_path, method: :get,local: true do |f| %>
    <%= f.label :payment_method, "支払い方法" %>
    <br>
    <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    <%= f.label :payment_method, "クレジットカード" %>
    <br>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :payment_method, "銀行振込" %>
    <br>
    
    <%= f.label :address, "お届け先" %>
    <br>
    <%= f.radio_button :address_option, 0, checked: "checked" %>
    <%= f.label :address, "ご自身の住所" %>
      <%= @customer.postcode %>
      <%= @customer.address %>
    <br>
    <%= f.radio_button :address_option, 1 %>
    <%= f.label :address, "登録済住所から選択" %>
    <%= f.collection_select :kaito_address , @customer.addresses, :id, :address , :include_blank => "選択してください" %>
    
    <br>
    <%= f.radio_button :address_option, 2 %>
    <%= f.label :address, "新しいお届け先" %>
    <br>
    
    <%= f.label :postcode, "郵便番号" %>
    <%= f.text_field :postcode %>
    <br>
    
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
    <br>
    
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
    <br>
    
    <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
    
    <% end %>
  </div>
</div>