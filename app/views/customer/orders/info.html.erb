<div class = "container">
  <div class = "row ml-5">
    <h3 class = "my-4 ml-5">注文情報入力</h3>
  </div>
  <div class = "row">
    <div class = "form-horizontal mx-auto">
      <%= form_with url: customer_orders_confirm_path,method: :get, local: true do |f| %>
        <%= f.label :payment_method, "支払い方法", class: "col-4" %>
          <span class = "mr-5">
            <%= f.radio_button :payment_method, "クレジットカード", checked: true %>
            <%= f.label :payment_method, 'クレジットカード' %>
          </span>
          <span>
            <%= f.radio_button :payment_method, "銀行支払" %>
            <%= f.label :payment_method, '銀行支払' %>
          </span>

            <%= f.label :payment_method, "お届け先", class: "col-4" %>
          <span class = "mr-5">
            <%= f.radio_button :address, current_customer.address, checked: true %>
            <%= f.label :address, "ご自身の住所" %><br />
            <%= current_customer.postcode %>
            <%= current_customer.address %>
            <%= current_customer.last_name %>
            <%= current_customer.first_name %>
          </span>
          <span>
            <%= f.radio_button :address, current_customer.addresses %>
            <%= f.label :address, '登録先住所から選択' %>
            <%= f.collection_select :address, @addresses, :id, :name, {prompt: "--選択してください--"}, {class: "col-7 pl-0"} %>
          </span>
          <span>
            <%= f.submit "確認画面へ進む" %>
          </span>
      <% end %>
    </div>
  </div>
</div>