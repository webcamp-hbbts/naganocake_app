<div class="container">
  <div class="row ml-5">
    <h3 class = "my-4 ml-5"><span style="background-color:#eee">注文情報入力</span></h3>
  </div>
  <%= form_with url: customer_orders_confirm_path, method: :get,local: true do |f| %>
    <strong><%= f.label :payment_method, "支払方法" %></strong>
    <br>
    <div class="ml-4">
      <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
    　<%= f.label :payment_method, "クレジットカード" %>
      <br>
      <%= f.radio_button :payment_method, :銀行振込 %>
   　  <%= f.label :payment_method, "銀行振込" %>
      <br>
    </div>
    <strong><%= f.label :address, "お届け先" %></strong>
    <br>
    <div class="ml-4">
      <%= f.radio_button :address_option, 0, checked: "checked" %>
      <%= f.label :address, "ご自身の住所" %>
      <%= @customer.postcode %>
      <%= @customer.address %>
      <br>
      <%= f.radio_button :address_option, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <div class="ml-4">
        <%= f.collection_select :kaito_address , @customer.addresses, :id, :address , :include_blank => "選択してください" %>
      </div>
      <br>
    </div>
    <div class="ml-4">
      <%= f.radio_button :address_option, 2 %>
      <%= f.label :address, "新しいお届け先" %>
      <br>
    </div>
    <div class="row">
      <div class="col-8">
        <table class="ml-5">
          <tr>
            <td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postcode, placeholder: "0000000", class: "form-control" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", class: "form-control" %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit "確認画面へ進む" , class: "btn btn-primary" %>
    </div>
  <% end %>
</div>