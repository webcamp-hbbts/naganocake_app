<div class = "container">
  <div class = "row ml-5">
    <h3 class = "my-4 ml-5"><span style="background-color:#eee">マイページ</span></h3>
  </div>
  <div class = "row">
    <div class="col-6">
      <strong class="mr-3">登録情報</strong>
      <%= link_to edit_customer_customers_path, class: 'btn btn-success' do %>
        編集する
      <% end %>
      <div class="mt-3"></div>
      <table class="table">
        <tr>
          <td style="background-color:#eee">氏名</td>
          <td class="border"><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td style="background-color:#eee">カナ</td>
          <td class="border"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td style="background-color:#eee">郵便番号</td>
          <td class="border"><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td style="background-color:#eee">住所</td>
          <td class="border"><%= @customer.address %></td>
        </tr>
         <tr>
          <td style="background-color:#eee">電話番号</td>
          <td class="border"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td style="background-color:#eee">メールアドレス</td>
          <td class="border"><%= @customer.email %></td>
        </tr> 
      </table>
    </div>
  </div>
  <div class="col-6"></div>
  <table class="mt-3">
    <tr>
      <td class="mt-3"><strong>配送先</strong></td>
      <td>
        <%= link_to customer_addresses_path, class: 'btn btn-primary' do %>
          一覧を見る
        <% end %>
      </td>
    </tr>
    <tr>
      <td><strong class="mr-3">注文履歴</strong></td>
      <td>
        <%= link_to customer_orders_path, class: 'btn btn-primary' do %>
          一覧を見る
        <% end %>
      </td>
    </tr>
  </table>
</div>


