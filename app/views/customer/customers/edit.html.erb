<div class = "container">
  <div class = "row ml-5">
    <h3 class = "my-4 ml-5"><span style="background-color:#eee">会員情報編集</span></h3>
  </div>
  <div class="col-2"></div>
  <div class="col-8">
    <%= form_with model: [:customer,@customer], url: customer_customers_path, local:true do |f| %>
      <table>
        <div class="form-group">
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "form-control", value: @customer.last_name %></td>
            <td><%= f.text_field :first_name, class: "form-control", value: @customer.first_name %></td>
            <td>               </td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, class: "form-control", value: @customer.last_name_kana %></td>
              <td><%= f.text_field :first_name_kana, class: "form-control", value: @customer.first_name_kana %></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postcode, class: "form-control", value: @customer.postcode %></td>
            <td></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td>住所</td>
            <td colspan="2"><%= f.text_field :address, class: "form-control", value: @customer.address %></td>
            <td></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, class: "form-control", value: @customer.phone_number %></td>
            <td></td>
          </tr>
        </div>
        <div class="form-group">
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class: "form-control", value: @customer.email %></td>
            <td></td>
          </tr>
        </div>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存",class: 'btn btn-success' %></td>
          <td>
            <%= link_to customer_customers_confirm_path, class: 'btn btn-danger' do %>
             退会する
            <% end %>
          </td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
  <div class="col-2"></div>
</div>