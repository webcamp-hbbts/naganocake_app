<div class="container">
  <div class="row ml-5">
    <h3 class="my-4 ml-5">商品一覧(全<%= @items.count %>件)</h3>
  </div>
  
  <div class="row mt-5">
    <% @items.each do |item| %>
      <div class="col-md-3 img-hidden">
      <%= link_to customer_item_path(item.id) do %>
        <%= attachment_image_tag item,:image, fallback: "no-image.png", size:"150x150", class:"attachment user profile_image fallback" %>
      <% end %><br />
      <p class="mt-2"><%= item.name %></p>
      ¥<%= ((item.tax_exclude_price * 1.1).floor).to_s(:delimited) %>
      </div>
      <% end %>
  </div>
  <div class="row">
    <%= paginate @items %>
  </div>
</div>
