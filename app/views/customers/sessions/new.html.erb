<div class="container">
  <%= flash[:error] %>
    <div class="row ml-5">
      <h3 class="my-4 ml-5">ログイン</h3>
    </div>
    <div class="row ml-4">
      <h5 class="my-4 ml-5">会員の方はこちらからログイン</h5>
    </div>
    <div class="row">
      <div class = "form-horizontal ml-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-6" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6" %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-6" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-6 pl-0" %>
        </div>
        <div class="actions form-group row d-flex justify-content-end">
          <div>
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="row ml-5">
      <h5 class="my-4 ml-5">管理者ログインは<%= link_to "こちら", new_admin_session_path %></h5>
    </div>
    <div class="row ml-5">
      <h5 class="my-4 ml-5">会員登録がお済みでない⽅<br /><%= render "customers/shared/links" %></h5>
    </div>
</div>

