<div class="container">
  <div class="row">
    <h3>新規会員登録</h3>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
        <div class="field row">
          <div class="col">  
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true, class: "name" %>
          </div>
          <div class="col">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, autofocus: true, class: "name" %>
          </div>
        </div>
        <div class="field row">
          <div class="col">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true, class: "name" %>  
          </div>
          <div class="col">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
          </div>
        </div>
        <div class="field row">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, class: "email" %>
        </div>
        <div class="field row">
          <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postcode, autocomplete: "postcode", class: "form_control" %>
        </div>
        <div class="field row">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, autocomplete: "prefecture", class: "form_control" %>
        </div>
        <div class="field row">
          <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
          <%= f.text_field :phone_number, autofocus: true, class: "name" %>
        </div>
        <div class="field row">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field row">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions row">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
    <% end %>
  </div>
  <div class="row">
    <h3>既に登録済みの⽅</h2><br />
    <%= render "customers/shared/links" %>
  </div>
</div>