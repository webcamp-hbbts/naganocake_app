<div class = "container">
  <div class="row ml-5">
    <h3 class="my-4 ml-5"><span style="background-color:#eee">管理者ログイン</span></h3>
  </div>
　<div class ="row">
　  <div class = "form-horizontal ml-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email,"メールアドレス", class: "col-6" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 pl-0" %>
      </div>
        
      <div class="form-group row">
        <%= f.label :password, "パスワード", class: "col-6" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-6 pl-0" %>
      </div>

      <div class="form-group row d-flex justify-content-end">
        <div>
          <%= f.submit "ログイン",class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>
  </div>
</div>